{
	"compilerOptions": {
		"incremental": true,
		"target": "ESNext",
		"lib": ["ESNext", "DOM"],
		"module": "CommonJS",
		"moduleResolution": "Node10",
		"resolveJsonModule": true,
		"allowJs": true,
		"strict": true,
		"outDir": "./dist/",
		"sourceMap": false,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true
	},
	"include": ["./src/**/*"]
}

